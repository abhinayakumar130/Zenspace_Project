<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Photon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Social Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- StyleSheet -->
    <link rel="stylesheet" href="/css/HomeStyle.css">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">

</head>
<body>
    <!-- Header Section -->
    <header class="container py-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="logo">ZENSPACE</div>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a href="https://localhost:7024/" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="https://preview.colorlib.com/theme/photon/services.html" class="nav-link">Services</a></li>
                    <li class="nav-item"><a href="https://preview.colorlib.com/theme/photon/about.html" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="ContactUs" class="nav-link">Contact</a></li>
                </ul>
            </nav>
            
                <div class="social-icons">
                <a href="#" class="text-dark mx-2"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-dark mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-dark mx-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-dark mx-2"><i class="fab fa-youtube"></i></a>
            </div>
            
        </div>
    </header>

    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   

    <!-- Footer -->
    <footer class="py-3 text-right">
        <p>Copyright &copy; 2024 All rights reserved | This template is made with <i class="fas fa-heart"></i> by Colorlib</p>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/js/script.js"></script>

    <!-- ContactUs Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<!-- Swiper Initialization -->
<script>
    const swiper = new Swiper('.swiper-container', {
        slidesPerView: 3, // Show 3 slides in a row
        spaceBetween: 10, // Space between slides
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
            loop: false,       // stop looping through slides
    });
</script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>